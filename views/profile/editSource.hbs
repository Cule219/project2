<div class='profile-container'>

  <h1>Company Profile.</h1>

    <div class='profile-header'>
      <img src='{{data.profileImg}}' height='200px'>
      <div class="profile-header-content">
        <h2>{{data.name}}</h2>
        <h3>Rating: 4.8</h3>
        <a href='{{data.url}}'>{{data.url}}</a>
      </div>
    </div>

    <div class="company-properties">
      <p>Category: <em>{{data.category}}</em></p>
      <p>Country: <em>{{data.country}}</em></p>
      <p>Language: <em>{{data.language}}</em></p>
    </div>

    <form action='/source/{{data.id}}' method='POST' id='source-edit-profile'>

    <h2>Description</h2>
    <textarea name='description' form='source-edit-profile' cols="86" rows ="10">{{data.description}}</textarea>

    <h2>Polticial Bias</h2>
    <textarea name='politicalBias' form='source-edit-profile' cols="86" rows ="10">{{data.politicalBias}}</textarea>


    <h2>Sources of Funding in 2018</h2>
    <textarea name='fundingSources' form='source-edit-profile' cols="86" rows ="10">{{data.politicalBias}}</textarea>


    <button type='submit'>Submit</button>

    </form>
 

    <h2>Recent Articles</h2>
    <div class='contributed-reviews'>
      {{#each articles}}
      <div class='recent-articles-img-container'>
        <img src='{{this.urlToImage}}' height='80px' width='80px'>
      </div>
      <div class='profile-content'>
        <p><strong>{{this.title}}</strong></p>
      </div>
      {{/each}}
    </div>

</div>