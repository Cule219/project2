<h1>Top stories.</h1>

<div class='homepage-container'>

  <div class='first-story-container'>
    <a href='/article/{{first._id}}'><img src='{{first.urlToImage}}' width='100%'></a>
    <div class='first-story-content'>
      <h2><a href='/article/{{first._id}}'>{{title first.title}}</a></h2>
      <h4><a href='/source/{{first.source.id}}'>{{first.source.name}}</a></h4>
      <p>{{first.publishDate}}</p>
    </div>

  </div>

  <hr />

  {{!-- {{#each data}}
  {{#if this.source.id}}
    <img src='{{this.urlToImage}}' height='100px'>
    <a href="{{this.url}}">{{this.title}}</a>
    <a href="/source/{{this.source.id}}">{{this.source.name}}</a><br />
   --}}

  {{#each data}}
  {{#if this.source.id}}
  <div class='stories-container'>
    <div class='stories-img-container'>
      <a href='/article/{{this._id}}'><img src='{{this.urlToImage}}' alt='news-image'></a>
    </div>
    <div class='stories-content'>
      <h3><a href='/article/{{this._id}}'>{{this.title}}</a></h3>
      <h4><a href='/source/{{this.source.id}}'>{{this.source.name}}</a></h4>
      <p>{{this.publishDate}}</p>
    </div>
    <hr />
  </div>  
  {{/if}}
  {{else}}
    <p class="empty">No content</p>
  {{/each}}


</div>


